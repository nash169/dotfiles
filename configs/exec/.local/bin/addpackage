#!/bin/bash

if [ -z "$1" ]
    then
        fileName="$HOME/.packages"
    else
        fileName=$1
fi

read -p "Package name: " name

checkpackage $name $fileName

read -p "Package comment: " comment
read -p "Package category: " category
read -p "Package tag: " tag

echo "$tag,$category,$name,"$comment" " >> $fileName
