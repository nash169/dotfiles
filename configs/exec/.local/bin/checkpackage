#!/bin/zsh

if [ -z "$2" ]; then
  fileName="$HOME/.packages"
else
  fileName=$2
fi

while IFS=, read -r tag category program comment; do
  if [ $1 = $program ]; then
    echo "The package is in the list"
    echo "Tag:        " $tag
    echo "Category:   " $category
    echo "Name:       " $program
    echo "Description:" $comment
  fi
done < $fileName
