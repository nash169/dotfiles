#!/bin/sh

# A dmenu wrapper script for system functions.
export WM="dwm"
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

wmpid(){ # This function is needed if there are multiple instances of the window manager.
	tree="$(pstree -ps $$)"
	tree="${tree#*$WM(}"
	echo "${tree%%)*}"
}
echo $(wmpid)

lock(){
    mpc pause
    pauseallmpv
    wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
    slock
}

case "$(printf "ğŸ”’ lock\nğŸšª leave $WM\nï€¡ refresh $WM\nğŸ» hibernate\nğŸ”ƒ reboot\nâ» poweroff\nğŸ’¤ sleep\nğŸ“º display off" | dmenu -i -p 'Action: ')" in
	'ğŸ”’ lock') lock ;;
	"îšƒ leave $WM") kill -TERM "$(wmpid)" ;;
	"ï€¡ refresh $WM") kill -HUP "$(wmpid)" ;;
	'â­˜ hibernate') slock $ctl hibernate -i ;;
	'ó°¤„ sleep') slock $ctl suspend -i ;;
	'î«’ reboot') $ctl reboot -i ;;
	'â» poweroff') $ctl poweroff -i ;;
	'ğŸ“º display off') xset dpms force off ;;
	*) exit 1 ;;
esac
